<%= render 'powders/nav' %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>新增供应商</h1>
      <%= simple_form_for @supplier do |f| %>
        <%= f.input :title, label: "名称" %>
        <%= f.input :contact_number, label: "电话" %>
        <%= f.input :address, label: "地址" %>
        <%= f.button :submit, class: 'btn btn-primary', value:'确认新增'%>
      <% end %>
    </div>
  </div>
</div>
