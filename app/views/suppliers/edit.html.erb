<%= render 'powders/nav' %>
<h1 class="text-center">供应商编辑</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <%= simple_form_for @supplier do |f| %>
        <%= f.input :title, label: "名称" %>
        <%= f.input :contact_number, label: "联系电话" %>
        <%= f.input :address, label: "地址" %>
        <%= f.button :submit, class: 'btn btn-primary', value:'确认修改' %>
        <%= link_to "返回", suppliers_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
